<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="PrefsUI" parent="AdwPreferencesPage">
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title">Drag and Drop</property>
        <property name="description">A drag and drop interface</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">1</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">400</property>
                <child>
                  <object class="GtkListBox" id="rightBox-order">
                    <style>
                      <class name="boxed-list"/>
                    </style>

                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwClamp">
                <property name="maximum-size">400</property>
                <child>
                  <object class="GtkListBox" id="list2">
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="true">Row 4</property>
                        <child type="prefix">
                          <object class="GtkImage">
                            <style>
                              <class name="dim-label"/>
                            </style>
                            <property name="icon-name">list-drag-handle-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="true">Row 5</property>
                        <child type="prefix">
                          <object class="GtkImage">
                            <style>
                              <class name="dim-label"/>
                            </style>
                            <property name="icon-name">list-drag-handle-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="true">Row 6</property>
                        <child type="prefix">
                          <object class="GtkImage">
                            <style>
                              <class name="dim-label"/>
                            </style>
                            <property name="icon-name">list-drag-handle-symbolic</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkLinkButton">
                <property name="label" translatable="true">API Reference</property>
                <property name="uri">https://docs.gtk.org/gtk4/drag-and-drop.html</property>
                <property name="margin-top">24</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>