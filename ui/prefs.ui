<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="PrefsUI" parent="AdwPreferencesPage">
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title">Topbar Order</property>
        <property name="description">Order of icons in the right side of top bar</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">1</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">600</property>
                <child>
                  <object class="GtkListBox" id="rightbox-order">
                    <style>
                      <class name="boxed-list"/>
                    </style>

                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <property name="title">Lilypad Group</property>
        <property name="description">Icons in collapsible menu</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">1</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">600</property>
                <child>
                  <object class="GtkListBox" id="lilypad-order">
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="true">-- lilypad button --</property>
                        <property name="selectable" translatable="true">false</property>
                        <child type="prefix">
                          <object class="GtkImage">
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkLinkButton">
                <property name="label" translatable="true">API Reference</property>
                <property name="uri">https://docs.gtk.org/gtk4/drag-and-drop.html</property>
                <property name="margin-top">24</property>
              </object>
            </child>
          </object>

        </child>
      </object>
    </child>
  </template>
</interface>